server {
    server_name convention.cs-campus.fr;
    client_max_body_size 100M;

    location /static/ {
        alias /home/ubuntu/static/static_root;
    }

    location / {
        proxy_pass http://localhost:8000;
    }

    listen 443 ssl; # managed by Certbot
    listen [::]:443 ssl;
    ssl_certificate /etc/letsencrypt/live/convention.cs-campus.fr/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/convention.cs-campus.fr/privkey.pem; # managed by Certbot
    # include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    # ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = convention.cs-campus.fr) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80 default_server;
    listen [::]:80 default_server;
    server_name convention.cs-campus.fr;
    return 404; # managed by Certbot
}
